{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2019",
    "module": "ES2022",
    "moduleResolution": "node",
    "lib": ["es2019", "dom"],
    "types": ["jest", "node"],
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
  },

  "include": ["./src/**/*.ts"],

  "exclude": ["node_modules", "**/__mocks__", "dist", "rollup.config.js"],
}
